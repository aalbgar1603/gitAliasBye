[alias]
	bye = "!f() { git add . && echo \"\n============================================================\nEjecutando git add .\n============================================================\n\" && read -p 'Ingrese el mensaje para el commit (deje en blanco para autorellenar): ' mensaje && [ -z \"$mensaje\" ] && fecha=$(date +'%d/%m/%Y - %H:%M') && mensaje=\"$fecha - $mensaje\" && echo \"\n============================================================\nEjecutando git commit -m '$mensaje'\n============================================================\n\" && git commit -m \"$mensaje\" && sleep 1 && echo \"\n============================================================\nEjecutando git push\n============================================================\n\" && git push && sleep 1; }; f"
